<resources>
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item> </style>
    <style name="CalcBtn.Scientific" parent="CalcBtn">
        <item name="android:textColor">#2196F3</item> <item name="android:textSize">16sp</item>
    </style>

    <style name="CalcBtn" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">22sp</item>
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#202124</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="CalcBtn.Operator">
        <item name="backgroundTint">#D2D5D8</item>
    </style>

    <style name="CalcBtn.Orange">
        <item name="backgroundTint">#FF9800</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>