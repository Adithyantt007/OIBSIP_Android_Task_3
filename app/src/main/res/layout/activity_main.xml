<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:padding="8dp">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|end"
        android:padding="24dp"
        android:text="0"
        android:textColor="?attr/colorOnSurface"
        android:textSize="64sp"
        android:fontFamily="casual" android:textStyle="bold" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:stretchColumns="0,1,2,3">

        <TableRow android:layout_height="80dp">

            <Button
                style="@style/CalcBtn.Operator"
                android:onClick="onClear"
                android:text="AC"
                android:fontFamily="casual" android:textStyle="bold" />

            <Button
                style="@style/CalcBtn.Operator"
                android:onClick="onDelete"
                android:text="âŒ«"
                android:fontFamily="casual" android:textStyle="bold" />

            <Button
                style="@style/CalcBtn.Operator"
                android:onClick="onBtnClick"
                android:text="%"
                android:fontFamily="casual" android:textStyle="bold" />

            <Button
                style="@style/CalcBtn.Orange"
                android:onClick="onBtnClick"
                android:text="/"
                android:fontFamily="casual" android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_height="80dp">

            <Button
                style="@style/CalcBtn"
                android:onClick="onBtnClick"
                android:text="7"
                android:fontFamily="casual" android:textStyle="bold" />

            <Button
                style="@style/CalcBtn"
                android:onClick="onBtnClick"
                android:text="8"
                android:fontFamily="casual" android:textStyle="bold" />

            <Button
                style="@style/CalcBtn"
                android:onClick="onBtnClick"
                android:text="9"
                android:fontFamily="casual" android:textStyle="bold" />

            <Button
                style="@style/CalcBtn.Orange"
                android:onClick="onBtnClick"
                android:text="*"
                android:fontFamily="casual" android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_height="80dp">

            <Button
                style="@style/CalcBtn"
                android:onClick="onBtnClick"
                android:text="4"
                android:fontFamily="casual" android:textStyle="bold" />

            <Button
                style="@style/CalcBtn"
                android:onClick="onBtnClick"
                android:text="5"
                android:fontFamily="casual" android:textStyle="bold" />

            <Button
                style="@style/CalcBtn"
                android:onClick="onBtnClick"
                android:text="6"
                android:fontFamily="casual" android:textStyle="bold" />

            <Button
                style="@style/CalcBtn.Orange"
                android:onClick="onBtnClick"
                android:text="-"
                android:fontFamily="casual" android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_height="80dp">

            <Button
                style="@style/CalcBtn"
                android:onClick="onBtnClick"
                android:text="1"
                android:fontFamily="casual" android:textStyle="bold" />

            <Button
                style="@style/CalcBtn"
                android:onClick="onBtnClick"
                android:text="2"
                android:fontFamily="casual" android:textStyle="bold" />

            <Button
                style="@style/CalcBtn"
                android:onClick="onBtnClick"
                android:text="3"
                android:fontFamily="casual" android:textStyle="bold" />

            <Button
                style="@style/CalcBtn.Orange"
                android:onClick="onBtnClick"
                android:text="+"
                android:fontFamily="casual" android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_height="80dp">

            <Button
                style="@style/CalcBtn"
                android:layout_span="2"
                android:onClick="onBtnClick"
                android:text="0"
                android:fontFamily="casual" android:textStyle="bold" />

            <Button
                style="@style/CalcBtn"
                android:onClick="onBtnClick"
                android:text="."
                android:fontFamily="casual" android:textStyle="bold" />

            <Button
                style="@style/CalcBtn.Orange"
                android:onClick="onEqual"
                android:text="="
                android:fontFamily="casual" android:textStyle="bold" />
        </TableRow>
    </TableLayout>
</LinearLayout>